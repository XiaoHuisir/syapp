<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/re_ok"
    android:layout_height="match_parent"
    android:background="@color/whites"
    android:orientation="vertical"
    tools:context=".ui.activity.MyQRActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/bgg" />

    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_32"
        android:background="@color/tou_ming">

        <LinearLayout
            android:id="@+id/btn_na_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"

                android:scaleType="centerInside"
                android:src="@mipmap/backk" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我的二维码"
            android:textColor="#010000"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <!--<TextView-->
    <!--android:id="@+id/txt_user_name"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:layout_marginTop="@dimen/dp_195"-->
    <!--android:text=""-->
    <!--android:textColor="@color/black"-->
    <!--android:textSize="@dimen/sp_18"-->
    <!--android:visibility="gone" />-->

    <ImageView
        android:layout_width="@dimen/dp_163"
        android:layout_height="@dimen/dp_69"
        android:layout_above="@id/im_view_qr"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_21"
        android:src="@mipmap/wenzi" />

    <ImageView
        android:id="@+id/im_view_qr"
        android:layout_width="@dimen/dp_207"
        android:layout_height="@dimen/dp_207"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dp_16" />

    <LinearLayout
        android:id="@+id/lin_poster"
        android:layout_width="@dimen/dp_93"
        android:layout_height="@dimen/dp_27"
        android:layout_below="@id/im_view_qr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_110"
        android:background="@drawable/myqr"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生成海报"
            android:textColor="@color/whites"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>

    <ImageView
        android:id="@+id/im_bug"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/re1"
        android:background="@drawable/au8"
        android:scaleType="centerCrop"
        android:visibility="gone" />
</RelativeLayout>