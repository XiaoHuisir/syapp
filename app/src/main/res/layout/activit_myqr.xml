<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whites"
    tools:context=".ui.activity.MyQRActivity">

    <RelativeLayout
        android:id="@+id/re_ok"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whites"
       >


        <View
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/bgg" />

        <RelativeLayout
            android:id="@+id/re1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dp_32"
            android:background="@color/tou_ming">

            <LinearLayout
                android:id="@+id/btn_na_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"

                    android:scaleType="centerInside"
                    android:src="@mipmap/backk" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="推广海报"
                android:textColor="#010000"
                android:textSize="@dimen/sp_15" />
        </RelativeLayout>

        <!--<TextView-->
        <!--android:id="@+id/txt_user_name"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="@dimen/dp_195"-->
        <!--android:text=""-->
        <!--android:textColor="@color/black"-->
        <!--android:textSize="@dimen/sp_18"-->
        <!--android:visibility="gone" />-->

        <ImageView
            android:layout_width="@dimen/dp_163"
            android:layout_height="@dimen/dp_69"
            android:layout_above="@id/im_view_qr"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_21"
            android:src="@mipmap/wenzi" />

        <ImageView
            android:id="@+id/im_view_qr"
            android:layout_width="@dimen/dp_207"
            android:layout_height="@dimen/dp_207"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_16" />

        <LinearLayout
            android:id="@+id/lin_poster"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_41"
            android:layout_below="@id/im_view_qr"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_110"
            android:background="@drawable/myqr"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生成海报"
                android:textColor="@color/whites"
                android:textSize="@dimen/sp_20" />
        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/re_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      android:visibility="gone"
        >
        <RelativeLayout
            android:id="@+id/re1_no"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dp_32"
            android:background="@color/tou_ming">

            <LinearLayout
                android:id="@+id/btn_na_back_no"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="15dp"

                    android:scaleType="centerInside"
                    android:src="@mipmap/backk" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="我的二维码"
                android:textColor="#010000"
                android:textSize="@dimen/sp_15" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/im_no"
            android:layout_width="@dimen/dp_261"
            android:layout_height="@dimen/dp_261"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_141"
            android:src="@drawable/pic" />

        <TextView
            android:id="@+id/tv_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/im_no"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:text="暂无二维码"
            android:textColor="#969696"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_no"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:text="请先加入商务消费小组"
            android:textColor="#969696"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/im_bug"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>