    <android.support.v7.widget.CardView
        android:id="@+id/re_shuru1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_tou"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/sp_15"
        android:layout_marginRight="@dimen/dp_13"
        app:cardBackgroundColor="@color/newnew_bg"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:cardMaxElevation="@dimen/dp_3"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whites"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_22">

            <ImageView
                android:id="@+id/im1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_23"
                android:src="@mipmap/icon_phones" />

            <TextView
                android:id="@+id/t_op"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_toRightOf="@id/im1"
                android:text="手机号"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/r1"
                android:layout_width="match_parent"

                android:layout_height="@dimen/dp_48"
                android:layout_below="@+id/t_op"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_toRightOf="@id/im1">

                <EditText
                    android:id="@+id/ed_re_userpho"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:numeric="integer"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:id="@+id/v1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/r1"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"
                android:background="@color/line_gray" />

            <ImageView
                android:id="@+id/im2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v1"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_23"
                android:src="@mipmap/icon_yanzhengmas" />

            <TextView
                android:id="@+id/t_op1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v1"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_toRightOf="@id/im2"
                android:text="验证码"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_12" />

            <RelativeLayout
                android:id="@+id/r2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_below="@+id/t_op1"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_toRightOf="@id/im2">

                <!--<TextView-->
                <!--android:id="@+id/t_name"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginLeft="@dimen/dp_16"-->
                <!--android:text="验证码"-->
                <!--android:textColor="#151515"-->
                <!--android:textSize="@dimen/sp_24" />-->

                <EditText
                    android:id="@+id/ed_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_toLeftOf="@id/getMsgCodeTv"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/getMsgCodeTv"
                    android:layout_width="96dp"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="13dp"
                    android:background="@drawable/getmsgcodetv_bg"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:text="获取验证码"
                    android:textColor="#0096ff" />
            </RelativeLayout>

            <View
                android:id="@+id/v2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/r2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"
                android:background="@color/line_gray" />

            <ImageView
                android:id="@+id/im3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v2"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_26"
                android:src="@mipmap/icon_mimas" />

            <TextView
                android:id="@+id/t_op2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v2"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_toRightOf="@+id/im3"
                android:text="密码"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12" />

            <RelativeLayout
                android:id="@+id/pws"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_below="@+id/t_op2"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_toRightOf="@+id/im3">

                <EditText
                    android:id="@+id/ed_re_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:layout_marginRight="@dimen/dp_4"
                    android:layout_toLeftOf="@+id/btn_show"
                    android:hint="请输入6-16为数字加字母的密码"
                    android:password="true"
                    android:textSize="14sp" />
                <ImageView
                    android:id="@+id/btn_show"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_13"
                    android:background="@drawable/btn_main_hide" />

            </RelativeLayout>

            <View
                android:id="@+id/v3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/pws"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"
                android:background="@color/line_gray" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
