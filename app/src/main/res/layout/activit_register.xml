    <TextView
        android:id="@+id/tv_pwd01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_shuru1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_17"
        android:text=""
        android:textColor="@color/red"
        android:textSize="14sp" />


    <LinearLayout
        android:id="@+id/lin_register"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_48"
        android:layout_below="@+id/tv_pwd01"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_marginRight="@dimen/dp_26"
        android:background="@drawable/btn_blue"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="19sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linshow"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_26"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_26"
        android:layout_below="@+id/lin_register"
        android:layout_marginTop="@dimen/dp_14"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_show1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="该手机号已经注册过！请重新填写，"
            android:textColor="#E02E24"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="或登录"
            android:textColor="#1B82D2"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

</RelativeLayout>