<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/tou_ming"
    app:cardCornerRadius="@dimen/dp_3"
    app:cardElevation="@dimen/dp_0"
    app:cardMaxElevation="@dimen/dp_0"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tou_ming"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/li_bnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_13"
            android:background="@drawable/mine_bgg"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_14">

                <TextView
                    android:id="@+id/tv_odd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="订单号：2019051109581300022"
                    android:textColor="#6e6e6e"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/txt_order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="订单待确认"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_11" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_14"
                android:background="#bfbfbf" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_14">

                <ImageView
                    android:id="@+id/imager"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/xiao18" />

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_toRightOf="@id/imager"
                    android:text="10.00手机 K1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12" />

                <RelativeLayout
                    android:id="@+id/rre1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/txt_name">

                    <TextView
                        android:id="@+id/txt_zhongji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="6709积分"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:layout_marginRight="@dimen/dp_4"-->
                        <!--android:layout_toLeftOf="@id/txt_zhongji"-->
                        <!--android:text="合计："-->
                        <!--android:textColor="@color/black"-->
                        <!--android:textSize="@dimen/sp_13" />-->
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rre2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rre1"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_toRightOf="@+id/txt_jiaqian">

                    <TextView
                        android:id="@+id/txt_item_freight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:text="(含运费:10积分)"
                        android:textColor="@color/black"
                        android:textSize="8sp" />
                </RelativeLayout>
                <!--<TextView-->
                <!--android:id="@+id/txt_color"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@id/txt_name"-->
                <!--android:layout_marginLeft="@dimen/dp_17"-->
                <!--android:layout_marginTop="@dimen/dp_1"-->
                <!--android:layout_toRightOf="@id/imager"-->
                <!--android:text="经典黑"-->
                <!--android:textColor="@color/black"-->
                <!--android:textSize="@dimen/sp_10" />-->

                <TextView
                    android:id="@+id/txt_jiaqian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_name"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_toRightOf="@id/imager"
                    android:text="6699积分"
                    android:textColor="#ff0000"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/txt_shuliang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rre2"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="x 1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12" />


                <LinearLayout
                    android:id="@+id/lin_xiangqing"
                    android:layout_width="60dp"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/recommend_item_img_back"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单详情"
                        android:textColor="#1677ff"
                        android:textSize="@dimen/sp_11" />
                </LinearLayout>
            </RelativeLayout>


            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/dp_10"-->
            <!--android:layout_marginTop="@dimen/dp_6"-->
            <!--android:background="@color/line_gray" />-->
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_13"
            android:background="@color/tou_ming" />
    </LinearLayout>

</android.support.v7.widget.CardView>