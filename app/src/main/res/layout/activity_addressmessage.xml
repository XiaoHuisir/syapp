<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/newnew_newbg"
    android:orientation="vertical"
    tools:context=".ui.activity.AddressMessage">

    <RelativeLayout
        android:id="@+id/re_break"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_32"
        android:background="@color/tou_ming">

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_13"
            android:src="@mipmap/backk" />

        <TextView
            android:id="@+id/tv_tilet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="1dp"
        android:layout_marginRight="@dimen/dp_13"
        android:background="@drawable/mine_bgg"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_20">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"

                android:text="姓名"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:layout_toLeftOf="@id/im1"
                android:layout_toRightOf="@+id/t1"
                android:background="@null"
                android:hint="请填写收货人姓名"
                android:textColor="#333"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/im1"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_11"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/jinru" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:background="@color/list_divider_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13">

            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="电话"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/et_company"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp"
                android:background="@null"
                android:layout_toRightOf="@+id/t2"
                android:layout_toLeftOf="@+id/im2"
                android:layout_centerVertical="true"
                android:hint="请填写收货人手机号"
                android:textColor="#333"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/im2"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_11"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/jinru" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:background="@color/list_divider_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13">

            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="12sp" />
            <!--android:focusable="false" 关闭软键盘-->
            <EditText
                android:id="@+id/et_post"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/im3"
                android:layout_toRightOf="@+id/t3"
                android:layout_marginLeft="13dp"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="省市区县、乡镇等"
                android:maxLines="1"
                android:textColor="#333"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/im3"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_11"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/jinru" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/lin_ed_street"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="详细地址"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/ed_street"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="17dp"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="街道、楼牌号等"
                android:maxLines="1"
                android:textColor="#333"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:background="@color/list_divider_color" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_hold_site"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_27"
        android:layout_marginRight="@dimen/dp_13"
        android:background="@drawable/btn_blue"
        android:text="保存收货地址"
        android:textColor="#FFF"
        android:textSize="@dimen/sp_19" />
</LinearLayout>