<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--tabIndicatorColor：Tab下面的横线颜色
    tabTextColor：tab默认的文字颜色
    tabSelectedTextColor：选中的tab的字体颜色-->
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_classfy"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tabIndicatorColor="#1B82D2"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="#1B82D2"
        app:tabTextColor="#585858" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_classfy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/line_gray" />
</LinearLayout>