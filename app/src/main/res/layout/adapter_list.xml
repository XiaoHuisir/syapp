<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_yie"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tou_ming"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mine_bgg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_yie"
            android:layout_width="@dimen/dp_67"
            android:layout_height="@dimen/dp_67"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_13"
            android:scaleType="centerCrop"
            android:src="@drawable/no_banner" />

        <TextView
            android:id="@+id/tv_tilet_yie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_21"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_toRightOf="@+id/image_yie"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="标题名"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_yie_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_tilet_yie"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_toRightOf="@id/image_yie"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="订单号"
            android:textColor="#6e6e6e6e"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/tv_createtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_yie_order_num"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_toRightOf="@id/image_yie"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="下单时间"
            android:textSize="@dimen/sp_10" />

        <View
            android:id="@+id/vv"
            android:layout_width="@dimen/dp_307"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/tv_createtime"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_22"
            android:background="#f0f0f0" />
        <LinearLayout
            android:layout_below="@+id/vv"
            android:layout_toRightOf="@id/image_yie"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_height="@dimen/dp_38">
            <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="销售金额:" />

            <TextView
            android:id="@+id/tv_code_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />
            </LinearLayout>

            <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收益金额:" />

            <TextView
            android:id="@+id/tv_rmb_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_12"
        android:background="@color/tou_ming" />
</LinearLayout>