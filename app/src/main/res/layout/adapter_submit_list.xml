<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/tou_ming"
    android:layout_height="@dimen/dp_87"

    >


    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_alignParentTop="true"
       android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/mine_bgg">
    <RelativeLayout
        android:id="@+id/re_choose"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@id/re_one"
        android:background="@color/white">


        <RelativeLayout
            android:id="@+id/reok_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/txt_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_toLeftOf="@+id/text_user_phone"
                android:layout_marginRight="@dimen/dp_4"
                android:text="收货人：翟广猛"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/text_user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              android:layout_marginRight="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="00000000000"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text_user_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/reok_01"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_8"
           android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/dp_10"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="收货地址：河北省高碑店市东盛办事处纽伦堡
底商4-4A  识缘科技公司二楼北"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_13" />
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/re_one"
            android:layout_width="@dimen/dp_64"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/text_editor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_14"
                android:src="@mipmap/back_h"
                android:text="编辑"
                android:textColor="@color/newnew_bg"
                android:textSize="@dimen/sp_20" />
        </RelativeLayout>

    </RelativeLayout>
<View
    android:layout_below="@+id/r1"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:background="@color/tou_ming"
    android:layout_height="match_parent"/>
</RelativeLayout>