<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_87"
    android:background="@color/tou_ming"

    >


    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/mine_bgg">

        <RelativeLayout
            android:id="@+id/re_choose"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@id/re_one"
            android:background="@color/white">


            <RelativeLayout
                android:id="@+id/reok_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_13">

                <TextView
                    android:id="@+id/txt_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_4"
                    android:layout_toLeftOf="@+id/text_user_phone"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="收货人：翟广猛"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/text_user_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_6"
                    android:text="0000"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lin_moren"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_17"
                android:layout_below="@id/reok_01"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_11"
                android:background="@drawable/recommend_item_img_back"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="默认"
                    android:textColor="#1677ff"
                    android:textSize="@dimen/sp_11" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_user_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reok_01"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toRightOf="@+id/lin_moren"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_one"
            android:layout_width="@dimen/dp_64"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/text_editor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_14"
                android:src="@mipmap/back_h"
                android:text="编辑"
                android:textColor="@color/newnew_bg"
                android:textSize="@dimen/sp_20" />
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/r1"
        android:layout_alignParentBottom="true"
        android:background="@color/tou_ming" />
</RelativeLayout>