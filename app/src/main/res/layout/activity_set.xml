<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/newnew_newbg"
    android:orientation="vertical"
    tools:context=".ui.activity.SetActivity">

    <RelativeLayout
        android:id="@+id/lin_wbeak"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_42"
        android:background="@color/tou_ming">

        <ImageView
            android:id="@+id/im_wbeak"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/tv_tilte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="设置"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <View
        android:id="@+id/v"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/lin_wbeak"
        android:background="@color/list_divider_color" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/lin_xinxi"
                android:background="@color/whites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/re_site"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_46">

                    <ImageView
                        android:id="@+id/iig3"
                        android:layout_width="@dimen/dp_23"
                        android:layout_height="@dimen/dp_23"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:src="@mipmap/shouhuodizhi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:layout_toRightOf="@+id/iig3"
                        android:text="收货地址"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_13" />

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="@dimen/dp_11"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_13"
                        android:src="@mipmap/jinru" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginRight="@dimen/dp_13"
                    android:background="@color/line_gray" />

                <RelativeLayout
                    android:id="@+id/re_ID"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_46">

                    <ImageView
                        android:id="@+id/iig4"
                        android:layout_width="@dimen/dp_23"
                        android:layout_height="@dimen/dp_23"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:src="@mipmap/dingdanguanli" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:layout_toRightOf="@+id/iig4"
                        android:text="订单管理"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_13" />

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="@dimen/dp_11"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_13"
                        android:src="@mipmap/jinru" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginRight="@dimen/dp_13"
                    android:background="@color/line_gray" />
                <RelativeLayout
                    android:id="@+id/re_alter_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_46">

                    <ImageView
                        android:id="@+id/iig5"
                        android:layout_width="@dimen/dp_23"
                        android:layout_height="@dimen/dp_23"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:src="@mipmap/gerenxinxi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:layout_toRightOf="@+id/iig5"
                        android:text="修改登录密码"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_13" />

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="@dimen/dp_11"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_13"
                        android:src="@mipmap/jinru" />
                </RelativeLayout>
            </LinearLayout>
                <RelativeLayout
                    android:id="@+id/re_exit"
                    android:layout_below="@+id/lin_xinxi"
                    android:layout_width="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_height="@dimen/dp_47"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/mine_bgg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_14"
                        android:text="退出账号"
                        android:textColor="#6b6b6b"
                        android:textSize="@dimen/sp_15" />


                </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>