<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_184"
    android:layout_height="wrap_content"
    android:background="@color/new_bag">

    <View
        android:id="@+id/v1"
        android:layout_width="@dimen/dp_170"
        android:layout_height="@dimen/dp_7"
        android:layout_alignParentTop="true"
        android:background="@color/new_bag" />

    <View
        android:id="@+id/v2"
        android:layout_width="@dimen/dp_7"
        android:layout_height="@dimen/dp_230"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/new_bag" />

    <LinearLayout
        android:id="@+id/linear_item"
        android:layout_width="@dimen/dp_170"
        android:layout_height="@dimen/dp_230"
        android:layout_below="@+id/v1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/v2"
        android:background="@color/whites"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/im_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_170"
            android:layout_gravity="center"
            android:background="@color/whites"
            android:scaleType="centerCrop"
            android:src="@color/col_blue" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_72"
            android:layout_marginLeft="@dimen/dp_6">

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="11"
                android:textColor="#151515"
                android:textSize="@dimen/sp_19" />

            <TextView
                android:id="@+id/text_src_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_name"
                android:layout_marginTop="@dimen/dp_3"
                android:text="222"
                android:textColor="#E02E24"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_name"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_toRightOf="@id/text_src_price"
                android:text="000"
                android:textColor="#9c9c9c"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>