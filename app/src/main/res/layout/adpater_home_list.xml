<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_172"
    android:layout_height="wrap_content"
    android:background="@color/tou_ming">

    <View
        android:id="@+id/v1"
        android:layout_width="@dimen/dp_172"
        android:layout_height="@dimen/dp_12"
        android:layout_alignParentTop="true"
        android:background="@color/tou_ming" />

    <View
        android:id="@+id/v2"
        android:layout_width="@dimen/dp_13"
        android:layout_height="@dimen/dp_225"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/tou_ming" />

    <LinearLayout
        android:id="@+id/linear_item"
        android:layout_width="@dimen/dp_160"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v1"
        android:layout_toRightOf="@+id/v2"
        android:background="@drawable/bgbg"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/im_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"
            android:layout_gravity="center"
            android:background="@color/whites"
            android:scaleType="centerCrop"
            android:src="@color/col_blue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="11"
                android:textColor="#1f1f1f"
                android:textSize="@dimen/sp_13" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="@dimen/dp_8"
                android:orientation="horizontal">

                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="@dimen/dp_6"-->
                    <!--android:text="ï¿¥"-->
                    <!--android:textColor="#fd5002"-->
                    <!--android:textSize="@dimen/sp_10" />-->

                <TextView
                    android:id="@+id/text_src_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:text="222"
                    android:textColor="#fd5002"
                    android:textSize="@dimen/sp_15" />

                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="@dimen/dp_6"-->
                    <!--android:text=".00"-->
                    <!--android:textColor="#fd5002"-->
                    <!--android:textSize="@dimen/sp_11" />-->

                <TextView
                    android:id="@+id/text_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text_src_price"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_alignParentBottom="true"
                    android:text="000"
                    android:textColor="#aaaaaa"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>