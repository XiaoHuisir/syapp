<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_cpp"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp">

    <View
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_227">

            <View
                android:id="@+id/none"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_17"
                android:background="#00000000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_210"
                android:layout_below="@id/none"
                android:background="@drawable/white_bg_all_8">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="117dp"
                    android:layout_marginTop="5dp"
                    android:text="10.00手机 K1"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="117dp"
                    android:layout_marginTop="4dp"
                    android:text="66积分"
                    android:textColor="@color/col_blue"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_shu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="92dp"
                    android:text="兑换数量："
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_shu"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="9dp"
                    android:text="剩余0件"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="24dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="92dp"
                    android:layout_marginRight="45dp"
                  android:gravity="center_vertical"
                    android:orientation="horizontal"

                    >
            <ImageView
                android:id="@+id/im_jian"
                android:src="@mipmap/jian"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="match_parent" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:text="0" />
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/im_add"
                        android:src="@mipmap/add"
                        android:layout_width="@dimen/dp_0"
                        android:layout_weight="1"
                        android:layout_height="match_parent" />


                    <!--<TextView-->
                        <!--android:id="@+id/tv_minus"-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:layout_weight="3"-->
                        <!--android:textColor="@color/black"-->
                        <!--android:text="+" />-->
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/im_styling"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="26dp"
                android:layout_marginBottom="157dp"
                android:src="@mipmap/xiao18" />

            <Button
                android:id="@+id/btn_exchang"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/btn_blue"
                android:text="立即兑换"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>