<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_cpp"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp">

    <View
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/r_1"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/r_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_227">

            <View
                android:id="@+id/none"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_17"
                android:background="#00000000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_210"
                android:layout_below="@id/none"
                android:background="@drawable/white_bg_all_8">

                <TextView
                    android:id="@+id/textv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="117dp"
                    android:layout_marginTop="5dp"
                    android:text="66积分"

                    android:textColor="@color/red"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tv_shu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="92dp"
                    android:text="兑换数量："
                    android:textColor="@color/black"
                    android:textSize="20sp" />


                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="24dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="92dp"
                    android:layout_marginRight="45dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"

                    >

                    <ImageView
                        android:id="@+id/im_jian"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@mipmap/jian" />


                    <TextView
                        android:id="@+id/text_shu_RAM"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/black" />

                    <ImageView
                        android:id="@+id/im_add"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@mipmap/add" />


                    <!--<TextView-->
                    <!--android:id="@+id/tv_minus"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:layout_weight="3"-->
                    <!--android:textColor="@color/black"-->
                    <!--android:text="+" />-->
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/im_styling"
                android:layout_width="70dp"
                android:scaleType="centerCrop"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="26dp"
                android:layout_marginBottom="157dp"
                android:src="@mipmap/xiao18" />

            <Button
                android:id="@+id/btn_exchang"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="#1B82d2"
                android:text="立即兑换"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_21" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>