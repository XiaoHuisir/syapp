    <RelativeLayout
        android:id="@+id/re"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_30">

        <TextView
            android:id="@+id/t_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="密码     "
            android:textColor="@color/blackss"
            android:textSize="@dimen/sp_20" />

        <EditText
            android:id="@+id/ed_pw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_toLeftOf="@+id/btn_show"
            android:layout_toRightOf="@id/t_pwd"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="number"
            android:password="true"
            android:text=""
            android:textSize="@dimen/sp_20" />

        <ImageView
            android:id="@+id/btn_show"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_8"
            android:background="@drawable/btn_main_hide" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/line_gray" />

    <LinearLayout
        android:id="@+id/wxlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用微信三方登录"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/kefu" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_50"
        android:background="#1B82D2"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没有识缘账号?"
            android:textColor="#9c9c9c"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:text="马上注册"
            android:textColor="#1B82D2"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

