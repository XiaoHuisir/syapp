    <ImageView
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_78"
        android:src="@mipmap/hot"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="@dimen/dp_247"
        android:layout_height="@dimen/dp_28"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_134"
        android:text="欢迎使用识缘商城App"
        android:textColor="#FF333333"
        android:textSize="@dimen/dp_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="@dimen/dp_144"
        android:layout_height="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_170"
        android:text="请使用平台账号登录"
        android:textColor="#FF7D808E"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_228"
        android:src="@mipmap/login_phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_228"
        android:text="手机号码"
        android:textColor="#FF3E4146"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_307"
        android:src="@mipmap/login_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_242"
        android:layout_marginRight="@dimen/dp_24"
        android:digits="1234567890"
        android:hint="请输入您的手机号码"
        android:inputType="number"
        android:text=""
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_307"
        android:text="密码"
        android:textColor="#FF3E4146"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_38"
        android:layout_marginRight="@dimen/dp_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ed_phone">

        <EditText
            android:id="@+id/ed_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:inputType="number"
            android:password="true"
            android:text=""
            android:textSize="@dimen/sp_16" />

        <Button
            android:id="@+id/btn_show"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@drawable/btn_main_hide" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/wxlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/re">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用微信三方登录"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/kefu" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_48"
        android:layout_marginRight="@dimen/dp_24"
        android:background="@drawable/whis"
        android:text="登录"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/re" />
</android.support.constraint.ConstraintLayout>