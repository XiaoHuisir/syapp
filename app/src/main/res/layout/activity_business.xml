<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_bag"
    android:orientation="vertical"
    tools:context=".ui.activity.BusinessActivity">

    <LinearLayout
        android:layout_marginTop="@dimen/dp_32"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/tou_ming"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lin_wbeak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_3"
            android:padding="@dimen/dp_10">

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/backk" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/new_bag"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_24"
                android:background="@drawable/mine_bgg"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我所在的商务拼团："
                    android:layout_marginLeft="@dimen/dp_13"
                    android:textColor="@color/newnew_bg"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_place"
                    android:text=""
                    android:textSize="@dimen/sp_16"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/tv_suozai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="你还没有加入任何一个商务拼团，请请继续努力！"
                    android:textColor="#aaaaaa"
                    android:textSize="@dimen/sp_16"
                    android:visibility="gone" />



            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_8"
                android:layout_width="match_parent"
                android:background="@drawable/mine_bgg"
                android:paddingBottom="@dimen/dp_24"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的商务拼团："
                    android:layout_marginLeft="@dimen/dp_13"
                    android:textColor="@color/newnew_bg"
                    android:textSize="@dimen/sp_15" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyc_synergic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_on"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_alignParentTop="true"
                        android:text="你还没拥有商务拼团，请继续努力！"
                        android:textColor="#aaaaaa"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:textSize="@dimen/sp_16"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>