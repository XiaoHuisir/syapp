<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_gray"
    android:orientation="vertical"
    tools:context=".ui.activity.IineItemActivity">

    <LinearLayout
        android:id="@+id/lin_return"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/dp_16"
            android:src="@mipmap/back_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:text="订单详情页"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_77"
        android:layout_marginTop="@dimen/dp_7"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_5"
            android:text="订单号：2019051109581300022"
            android:textColor="#646d6d6d"
            android:textSize="@dimen/sp_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/dp_7"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_11"
                android:src="@mipmap/xiao18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="订单待确认"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_91"
        android:layout_marginTop="@dimen/dp_7"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/re_1"
            android:layout_width="292dp"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="11dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:text="收货人：张三"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_54"
                android:text="1234455600000"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="@dimen/dp_280"
            android:layout_height="wrap_content"
            android:layout_below="@id/re_1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_8"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="收货地址：河北省高碑店市东盛办事处纽伦堡
底商4-4A  识缘科技公司二楼北101" />

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_5"
            android:src="@mipmap/mapico_arrows" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_183"
        android:layout_marginTop="@dimen/dp_7"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/re_2"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@id/re_site_ok"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="6dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/im_1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/xiao18" />

            <TextView
                android:id="@+id/tv_iphone_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@id/im_1"
                android:text="10.00手机 K1"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_iphone_name"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/im_1"
                android:text="经典黑"
                android:textColor="@color/black"
                android:textSize="9sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_color"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="14dp"
                android:layout_toRightOf="@id/im_1"
                android:text="6699积分"
                android:textColor="@color/red"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="27dp"
                android:text="X 1"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_4"
                android:layout_toLeftOf="@id/tv_fen"
                android:text="合计："
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_fen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_16"
                android:text="3333积分"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_14" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_16"
            android:text="(含运费：10积分)"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>
</LinearLayout>